{
    "name": "cantinas-api",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "start": "npm run clean && npm run build && npm run watch",
        "build": "npm run build-ts && npm run tslint",
        "serve": "nodemon dist/server.js --delay 1",
        "watch": "run-p \"watch-ts\" \"serve\"",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "tslint": "tslint 'src/**/*.ts' -c tslint.json  --format stylish --force",
        "tslint-fix": "tslint './src/**/*.ts' -c tslint.json --fix",
        "test": "mocha './dist/**/*.test.js'",
        "clean": "rimraf dist coverage"
    },
    "dependencies": {
        "express": "~4.15.5",
        "lodash": "^4.17.4",
        "mongodb": "^2.2.33"
    },
    "devDependencies": {
        "@types/chai": "^4.0.4",
        "@types/express": "^4.0.39",
        "@types/lodash": "^4.14.85",
        "@types/mocha": "^2.2.44",
        "@types/mongodb": "^2.2.15",
        "@types/node": "^8.0.51",
        "@types/sinon": "^4.0.0",
        "@types/supertest": "^2.0.4",
        "chai": "^4.1.2",
        "mocha": "^4.0.1",
        "nodemon": "^1.12.1",
        "npm-run-all": "^4.1.2",
        "rimraf": "^2.6.2",
        "sinon": "^4.1.2",
        "supertest": "^3.0.0",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1"
    }
}

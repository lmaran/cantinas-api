{
    "name": "cantinas-api",
    "version": "0.0.0",
    "private": true,
    "engines": {
        "node": "8.1.3",
        "npm": "5.6.0"
    },
    "scripts": {
        "start": "run-s build watch",
        "build": "run-s clean build-tsc  copy-json",
        "build-prod": "run-s clean build-tsc-prod copy-json",
        "build-tsc": "tsc -p tsconfig.dev.json",
        "build-tsc-prod": "tsc -p tsconfig.prod.json",
        "copy-json": "cpx src/**/*.json dist/src",
        "watch": "run-p watch-*",
        "watch-tsc": "tsc -p tsconfig.dev.json --watch",
        "fail-on-windows:watch-json": "cpx src/swagger.json dist/src --watch --no-initial --verbose",
        "watch-json": "onchange src/**/*.json -- npm run copy-json",
        "watch-dist": "nodemon --config nodemon.json",
        "lint": "tslint 'src/**/*.ts' -c tslint.json --format stylish --force",
        "test": "mocha 'dist/**/*.test.js' --exit",
        "clean": "rimraf dist"
    },
    "dependencies": {
        "ajv": "^6.5.0",
        "body-parser": "^1.18.3",
        "express": "^4.16.3",
        "lodash": "^4.17.10",
        "mongodb": "^2.2.33",
        "node-loggly-bulk": "^2.2.2",
        "randomstring": "^1.1.5",
        "rollbar": "^2.4.0",
        "swagger-ui-express": "^3.0.9",
        "winston": "^2.4.2"
    },
    "devDependencies": {
        "@types/chai": "^4.0.4",
        "@types/express": "^4.11.1",
        "@types/lodash": "^4.14.85",
        "@types/mocha": "^2.2.44",
        "@types/mongodb": "^2.2.15",
        "@types/node": "^8.10.12",
        "@types/sinon": "^4.0.0",
        "@types/supertest": "^2.0.4",
        "@types/winston": "^2.3.9",
        "chai": "^4.1.2",
        "cpx": "^1.5.0",
        "mocha": "^5.2.0",
        "nodemon": "^1.17.5",
        "npm-run-all": "^4.1.3",
        "onchange": "^4.0.0",
        "prettier": "^1.12.1",
        "rimraf": "^2.6.2",
        "sinon": "^5.0.7",
        "supertest": "^3.1.0",
        "tslint": "^5.10.0",
        "typescript": "^2.8.3"
    }
}

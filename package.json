{
    "name": "cantinas-api",
    "version": "0.0.0",
    "private": true,
    "engines": {
		"node": "8.1.3",
		"npm": "5.6.0"
	},
    "scripts": {
        "start": "npm run clean && npm run build && npm run lint && npm run watch",
        "build": "tsc -p server/tsconfig.dev.json",
        "build-prod": "tsc -p server/tsconfig.prod.json",
        "lint": "tslint 'server/**/*.ts' -c server/tslint.json  --format stylish --force",
        "serve": "nodemon dist/server/server.js --delay 1",
        "watch": "run-p \"watch-ts\" \"serve\"",
        "watch-ts": "tsc -p server/tsconfig.dev.json -w",
        "test": "mocha 'dist/**/*.test.js' --exit",
        "clean": "rimraf dist coverage"
    },
    "dependencies": {
        "express": "~4.15.5",
        "lodash": "^4.17.4",
        "mongodb": "^2.2.33"
    },
    "devDependencies": {
        "@types/chai": "^4.0.4",
        "@types/express": "^4.0.39",
        "@types/lodash": "^4.14.85",
        "@types/mocha": "^2.2.44",
        "@types/mongodb": "^2.2.15",
        "@types/node": "^8.0.51",
        "@types/sinon": "^4.0.0",
        "@types/supertest": "^2.0.4",
        "chai": "^4.1.2",
        "mocha": "^4.0.1",
        "nodemon": "^1.12.1",
        "npm-run-all": "^4.1.2",
        "rimraf": "^2.6.2",
        "sinon": "^4.1.2",
        "supertest": "^3.0.0",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1"
    }
}

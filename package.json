{
    "name": "cantinas-api",
    "version": "0.0.0",
    "private": true,
    "engines": {
        "node": "10.14.1",
        "npm": "6.4.1"
    },
    "scripts": {
        "start": "run-s build watch",
        "build": "run-s clean build-tsc  copy-files",
        "build-prod": "run-s clean build-tsc-prod copy-files",
        "build-tsc": "tsc -p tsconfig.dev.json",
        "build-tsc-prod": "tsc -p tsconfig.prod.json",
        "copy-files": "cpx \"src/**/*.{json,js}\" dist/src",
        "watch": "run-p watch-*",
        "watch-tsc": "tsc -p tsconfig.dev.json --watch",
        "fail-on-windows:watch-files": "cpx src/swagger.json dist/src --watch --no-initial --verbose",
        "watch-files": "onchange \"src/**/*.{json,js}\" -- npm run copy-files",
        "watch-dist": "nodemon --config nodemon.json",
        "lint": "tslint 'src/**/*.ts' -c tslint.json --format stylish --force",
        "test": "mocha 'dist/**/*.test.js' --exit",
        "clean": "rimraf dist"
    },
    "dependencies": {
        "ajv": "^6.6.1",
        "body-parser": "^1.18.3",
        "clone": "^2.1.2",
        "cycle": "^1.0.3",
        "express": "^4.16.4",
        "lodash": "^4.17.11",
        "mongodb": "^3.1.10",
        "node-loggly-bulk": "^2.2.4",
        "randomstring": "^1.1.5",
        "rollbar": "^2.5.1",
        "sinon": "^7.2.2",
        "swagger-ui-express": "^4.0.2",
        "winston": "^3.1.0"
    },
    "devDependencies": {
        "@types/chai": "^4.1.7",
        "@types/express": "^4.16.0",
        "@types/lodash": "^4.14.119",
        "@types/mocha": "^5.2.5",
        "@types/mongodb": "^3.1.17",
        "@types/node": "^10.12.15",
        "@types/sinon": "^7.0.0",
        "@types/supertest": "^2.0.7",
        "@types/winston": "^2.4.4",
        "chai": "^4.2.0",
        "cpx": "^1.5.0",
        "mocha": "^5.2.0",
        "nodemon": "^1.18.9",
        "npm-run-all": "^4.1.5",
        "onchange": "^5.2.0",
        "prettier": "^1.15.3",
        "rimraf": "^2.6.2",
        "supertest": "^3.3.0",
        "tslint": "^5.11.0",
        "typescript": "^3.2.2"
    }
}

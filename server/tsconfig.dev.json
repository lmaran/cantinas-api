{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,              /* Generates corresponding '.map' file. */
        "outDir": "../dist/server",
        "baseUrl": ".",
        "paths": {
            "*": [
                "../node_modules/*",
                "../server/types/*"
            ]
        }
    },
    "include": [
        "../server/**/*"
    ]
}